			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.5.8</version>
		</dependency>
		<dependency> <!-- instrumentation spring et hibernate -->
			<groupId>cglib</groupId>
			<artifactId>cglib</artifactId>
